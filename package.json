{
  "name": "javascript-library",
  "version": "0.0.0-development",
  "description": "POC for npm package publishing and deploy",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha src/index.test.js -w",
    "check-coverage": "istanbul check-coverage --statements 75 --branches 75 --functions 75 --lines 75",
    "test:single": "istanbul cover -x 'src/*.test.js' _mocha -- -R spec src/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FiF0o/javascript-library-POC.git"
  },
  "keywords": [
    "poc",
    "deploy",
    "npm",
    "package"
  ],
  "author": "Jon Laz <jonathan.lazarini@wanadoo.fr>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FiF0o/javascript-library-POC/issues"
  },
  "homepage": "https://github.com/FiF0o/javascript-library-POC#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "commitizen": "2.9.5",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "semantic-release": "^6.3.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
